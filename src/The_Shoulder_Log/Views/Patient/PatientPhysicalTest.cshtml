@model The_Shoulder_Log.Models.PatientViewModels.PatientPhysicalTestViewModel

@{
    ViewData["Title"] = "PatientPhysicalTest";
}

<div class="container">
    <div class="row text-center">
        <h2>Physical Test</h2>
    </div>
<br/> <br/>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-6">
            <form asp-action="PatientPhysicalTest">
                <div class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Abduction" class="col-md-5 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="Abduction" class="form-control" />
                            <span asp-validation-for="Abduction" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExternalRotation" class="col-md-5 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="ExternalRotation" class="form-control" />
                            <span asp-validation-for="ExternalRotation" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="InternalRotation" class="col-md-5 control-label"></label>
                        <div class="col-md-5">
                            <input asp-for="InternalRotation" class="form-control" />
                            <span asp-validation-for="InternalRotation" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <div class="checkbox">
                                <input asp-for="AprehensionTest" />
                                <label asp-for="AprehensionTest"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <div class="checkbox">
                                <input asp-for="DrawerTest" />
                                <label asp-for="DrawerTest"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <div class="checkbox">
                                <input asp-for="JobTest" />
                                <label asp-for="JobTest"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <div class="checkbox">
                                <input asp-for="NapoleonTest" />
                                <label asp-for="NapoleonTest"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <div class="checkbox">
                                <input asp-for="SpeedTest" />
                                <label asp-for="SpeedTest"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <div class="checkbox">
                                <input asp-for="SulcusTest" />
                                <label asp-for="SulcusTest"></label>
                            </div>
                        </div>
                    </div>
                    <br> <br>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <input type="submit" value="Save Physical Exam" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
<div>
    <a asp-controller="Physician" asp-action="Library">Back to Library</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>
